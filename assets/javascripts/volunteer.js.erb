(function() {
    Discourse.Dialect.inlineBetween({
        start: '[volunteer:sound]',
        stop:  '[/volunteer]',
        rawContents: true,
        emitter: function(contents) {
            return ['button', {
                class : 'btn',
                id : contents
            } ].concat('volunteer');
        }
    });
    Discourse.Dialect.inlineBetween({
        start: "[volunteer:trivia]",
        stop:  "[/volunteer]",
        rawContents: true,
        emitter: function(contents) {
            return ['button', {
                class : 'btn',
                id : contents
            },'volunteer'];
        }
    });
    Discourse.Markdown.whiteListTag('button', 'id', /^\d+$/);
    Discourse.Markdown.whiteListTag('button', 'volunteer-type','sound');
    Discourse.Markdown.whiteListTag('button', 'volunteer-type','trivia');
    Discourse.Markdown.whiteListTag('button', 'class','btn');

}).call(this);